{
  "name": "itty.bitty",
  "short_name": "itty.bitty",
  "description": "Share recipes (and more) with itty.bitty",
  "version": "1.0",
  "icons": {
    "32": "favicon.png",
    "128": "favicon.png" 
  },
  "incognito": "split",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "favicon.png",
    "default_title": "Send to itty.bitty"
  },
  "commands": {
    "_execute_action": {"suggested_key": { "default": "Alt+B", "mac": "Alt+B"}}
  },
  "permissions": ["activeTab", "scripting"],
  "optional_host_permissions": ["*://*/*"],
  "manifest_version": 3
}
